pipeline {
    agent any

    tools {
        maven 'Maven'   // Jenkins tool configuration (Manage Jenkins → Tools → Maven installations)
    }

    stages {
        stage('Checkout') {
            steps {
                echo "📥 Checking out source code..."
                git branch: 'master',
                    url: 'https://github.com/MojjadaCode-Git/simple-java-maven-app.git'
            }
        }

        stage('Clean Workspace') {
            steps {
                echo "🧹 Cleaning old build files..."
                sh 'rm -rf target'
            }
        }

        stage('Build') {
            steps {
                echo "🔨 Building project..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                echo "🧪 Running tests..."
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo "📦 Packaging application..."
                sh 'mvn package'
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                echo "🚀 Deploying WAR to Tomcat as ROOT..."
                sh '''
                    # remove old ROOT app
                    sudo -S rm -rf /opt/tomcat/webapps/ROOT*

                    # copy new WAR as ROOT.war
                    sudo -S cp target/*.war /opt/tomcat/webapps/ROOT.war

                    # restart Tomcat service
                    sudo -S systemctl restart tomcat
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Build + Deploy succeeded!"
            echo "🌍 Access your app at: http://13.219.135.216:8080/"
        }
        failure {
            echo "❌ Build failed. Please check console output."
        }
    }
}
